{{#each games as |game| }}
<div class="container-fluid game">
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/project/{{game.id}}">{{game.name}}</a>
    </h2>
    <p>

    <p>Hours played: {{game.user.name}} played {{format_date game.time_played}} time total.</p>
  </div>
  <div class="col-md-7">
    <p>
      {{game.description}}
    </p>
  </div>
</div>
{{/each}}


 {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Your Games:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/homepage.js"></script>